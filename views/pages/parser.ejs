<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header-materialize.ejs %>
</head>

<body>

<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">
      
      <form class="card hoverable" id="tasks-form" method="post" action="/parser">
        <div class="card-content">

          <span class="card-title red-text text-lighten-1"><strong>WunderList</strong> Parser</span>
          <div class="divider"></div>

          <% if (locals.message) { %>
          <div class="<%= message.classes %>">
            <%- message.text %>
          </div>  
          <% } %>

          <div class="input-field">
            <i class="material-icons prefix grey-text">assignment</i>
            <input id="list_title" type="text" name='title' class="validate" required>
            <label for="list_title">List Title</label>
          </div>
          <div class="input-field">
            <i class="material-icons prefix grey-text">mode_edit</i>
            <textarea id="textarea1" name='tasks' class="materialize-textarea" required></textarea>
            <label for="textarea1">Tasks</label>
          </div>

          <p class='notes grey-text right-align'>* Empty lines are ignored</p>

        </div> <!-- end of card-content -->
        <div class="card-action center-align blue lighten-2">
          <button class='btn-flat white-text create-list' type='submit'>Create List</a>
        </div>
      </form> <!-- end of card -->
      <p class="grey-text last center-align">Click <a href='/logout'>here</a> to start over.</p>

    </div>
  </div>
</div


</body

</html>